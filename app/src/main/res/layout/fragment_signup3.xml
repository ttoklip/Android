<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/signup3_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약관에 동의해주세요!"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/TextAppearance.App.12sp_500"
        android:textSize="13sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/signup3_terms_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/signup3_desc_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/signup3_agreeAll_iv"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/oval_fill_strok_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/signup3_agreeAll_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체 약관 동의"
                android:textAppearance="@style/TextAppearance.App.14sp_600"
                android:textSize="13dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/signup3_agreeAll_iv"
                app:layout_constraintTop_toTopOf="@id/signup3_agreeAll_iv"
                app:layout_constraintBottom_toBottomOf="@id/signup3_agreeAll_iv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/signup3_horizontalLine_view"
            android:layout_width="306dp"
            android:layout_height="1dp"
            android:background="@color/gray40"
            android:layout_marginTop="10dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/signup3_agreeService_iv"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/oval_fill_strok_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/signup3_agreeService_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서비스 이용약관 동의 (필수)"
                android:textAppearance="@style/TextAppearance.App.14sp_600"
                android:textSize="13dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/signup3_agreeService_iv"
                app:layout_constraintTop_toTopOf="@id/signup3_agreeService_iv"
                app:layout_constraintBottom_toBottomOf="@id/signup3_agreeService_iv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이용약관 보기"
                android:textColor="@color/gray60"
                android:textAppearance="@style/TextAppearance.App.10sp_500"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/signup3_agreeService_tv"
                app:layout_constraintBottom_toBottomOf="@id/signup3_agreeService_tv"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ScrollView
                android:id="@+id/signup3_serviceDetail_sv"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:visibility="visible"
                android:background="@drawable/rectangle_corner_4"
                android:layout_marginTop="10dp"
                android:layout_marginStart="27dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintStart_toStartOf="@id/signup3_agreeService_tv"
                app:layout_constraintTop_toBottomOf="@id/signup3_agreeService_tv">
                <TextView
                    android:id="@+id/signup3_serviceDetail_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="이용약관 내용"
                    android:textAppearance="@style/TextAppearance.App.12sp_500"
                    android:textColor="@color/gray60"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"/>
            </ScrollView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/signup3_agreePrivacy_iv"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/oval_fill_strok_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/signup3_agreePrivacy_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개인정보 처리 방침 (필수)"
                android:textAppearance="@style/TextAppearance.App.14sp_600"
                android:textSize="13dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/signup3_agreePrivacy_iv"
                app:layout_constraintTop_toTopOf="@id/signup3_agreePrivacy_iv"
                app:layout_constraintBottom_toBottomOf="@id/signup3_agreePrivacy_iv"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이용약관 보기"
                android:textColor="@color/gray60"
                android:textAppearance="@style/TextAppearance.App.10sp_500"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toTopOf="@id/signup3_agreePrivacy_tv"
                app:layout_constraintBottom_toBottomOf="@id/signup3_agreePrivacy_tv"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:id="@+id/signup3_agreeLocation_iv"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:src="@drawable/oval_fill_strok_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/signup3_agreeLocation_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="위치서비스 이용 동의 (선택)"
                android:textAppearance="@style/TextAppearance.App.14sp_600"
                android:textSize="13dp"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/signup3_agreeLocation_iv"
                app:layout_constraintTop_toTopOf="@id/signup3_agreeLocation_iv"
                app:layout_constraintBottom_toBottomOf="@id/signup3_agreeLocation_iv"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>