<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_intro_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="우리, 꿀팁 공유해요!"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_intro_desc1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="독립생활을 하는데 어려운 점을 공유하고"
        android:textColor="@color/gray80"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/item_intro_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/item_intro_desc2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="도움을 주며 해결해봐요"
        android:textColor="@color/gray80"
        app:layout_constraintTop_toBottomOf="@id/item_intro_desc1_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/item_intro_appimage_iv"
        android:layout_width="230dp"
        android:layout_height="370dp"
        android:background="@color/gray20"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/item_intro_desc2_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>