<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/signup4_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="거의 다 왔어요!"
                android:textAppearance="@style/TextAppearance.App.12sp_500"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/signup4_profileImage_iv"
                android:layout_width="95dp"
                android:layout_height="95dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/oval_fill_strok_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signup4_desc_tv"
                app:tint="@color/gray40" />

            <LinearLayout
                android:id="@+id/signup4_signupbox_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signup4_profileImage_iv">

                <TextView
                    android:id="@+id/signup4_nickname_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임"
                    android:textAppearance="@style/TextAppearance.App.14sp_700" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:id="@+id/signup4_nickname_et"
                        android:layout_width="309dp"
                        android:layout_height="40dp"
                        android:background="@drawable/rectangle_corner_10"
                        android:backgroundTint="@color/gray20"
                        android:hint="닉네임을 입력해주세요."
                        android:paddingLeft="10dp"
                        android:textAppearance="@style/TextAppearance.App.14sp_500"
                        android:textColorHint="@color/gray60"
                        android:textSize="11sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/signup4_nickcheck_button"
                        android:layout_width="90dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/rectangle_corner_30"
                        android:backgroundTint="@color/gray40"
                        android:stateListAnimator="@null"
                        android:text="중복 확인"
                        android:textAppearance="@style/TextAppearance.App.12sp_500"
                        android:textColor="@color/gray80"
                        android:textSize="11sp"
                        app:layout_constraintBottom_toBottomOf="@id/signup4_nickname_et"
                        app:layout_constraintEnd_toEndOf="@id/signup4_nickname_et"
                        app:layout_constraintTop_toTopOf="@id/signup4_nickname_et" />

                    <TextView
                        android:id="@+id/signup4_nickok_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:text="사용이 가능한 닉네임이에요 :)"
                        android:textAppearance="@style/TextAppearance.App.12sp_500"
                        android:textColor="@color/blue"
                        android:textSize="11sp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/signup4_nickname_et" />

                    <TextView
                        android:id="@+id/signup4_nicknotok_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="10dp"
                        android:text="중복된 아이디예요 ㅠㅠ"
                        android:textAppearance="@style/TextAppearance.App.12sp_500"
                        android:textColor="@color/orange"
                        android:textSize="11sp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/signup4_nickname_et" />

                    <TextView
                        android:id="@+id/signup4_pwcheck_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="우리 동네 설정"
                        android:textAppearance="@style/TextAppearance.App.14sp_700"
                        android:layout_marginTop="15dp"
                        app:layout_constraintTop_toBottomOf="@id/signup4_nickname_et"
                        app:layout_constraintStart_toStartOf="parent"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/signup4_pwcheck_tv"
                        app:layout_constraintStart_toStartOf="parent">

                        <EditText
                            android:id="@+id/signup4_locationcheck_et"
                            android:layout_width="309dp"
                            android:layout_height="40dp"
                            android:background="@drawable/rectangle_corner_10"
                            android:backgroundTint="@color/gray20"
                            android:hint="영문, 숫자, 특수문자 조합 최소 8자"
                            android:paddingLeft="10dp"
                            android:textAppearance="@style/TextAppearance.App.14sp_500"
                            android:textColorHint="@color/gray60"
                            android:textSize="11sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/signup2_locationCheckVisible_iv"
                            android:layout_width="19dp"
                            android:layout_height="19dp"
                            android:layout_marginEnd="10dp"
                            android:src="@drawable/ic_map_marker_24"
                            app:layout_constraintBottom_toBottomOf="@id/signup4_locationcheck_et"
                            app:layout_constraintEnd_toEndOf="@id/signup4_locationcheck_et"
                            app:layout_constraintTop_toTopOf="@id/signup4_locationcheck_et"
                            app:tint="@color/gray60" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/signup4_independence_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="나의 독립 경력"
                    android:textAppearance="@style/TextAppearance.App.14sp_700" />

                <EditText
                    android:id="@+id/signup4_independence_et"
                    android:layout_width="309dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_corner_10"
                    android:backgroundTint="@color/gray20"
                    android:hint="00년 00개월"
                    android:paddingLeft="10dp"
                    android:textAppearance="@style/TextAppearance.App.14sp_500"
                    android:textColorHint="@color/gray60"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/signup4_onmind_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="고민거리 선택"
                    android:textAppearance="@style/TextAppearance.App.14sp_700" />

                <EditText
                    android:layout_width="309dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_corner_10"
                    android:backgroundTint="@color/gray20"
                    android:hint="00년 00개월"
                    android:paddingLeft="10dp"
                    android:textAppearance="@style/TextAppearance.App.14sp_500"
                    android:textColorHint="@color/gray60"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Spinner
                    android:id="@+id/signup4_onmind_et"
                    android:layout_width="309dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rectangle_corner_10"
                    android:backgroundTint="@color/gray20" />
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signup4_next_btn"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/rectangle_corner_30"
                android:backgroundTint="@color/yellow"
                android:stateListAnimator="@null"
                android:text="똑립 시작하기"
                android:textAppearance="@style/TextAppearance.App.16sp_600"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/signup4_signupbox_ll" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>